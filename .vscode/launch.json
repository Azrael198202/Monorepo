{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web-SEO: Next.js Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/apps/web-seo",
      "serverReadyAction": {
        "pattern": "started server on .*url: (http?://.*)",
        "action": "openExternally"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Web-SEO: Next.js Debug (Node Inspector)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect-brk",
        "node_modules/next/dist/bin/next",
        "dev"
      ],
      "cwd": "${workspaceFolder}/apps/web-seo",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
